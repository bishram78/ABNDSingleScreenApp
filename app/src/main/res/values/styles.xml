<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LLScheduleStyle">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">@dimen/lmb_abc_ll_schedule_wrap</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LLScheduleStyle.Start" parent="LLScheduleStyle">
        <item name="android:layout_marginStart">@dimen/lms_abc_ll_schedule_wrap</item>
    </style>

    <style name="LLScheduleStyle.End" parent="LLScheduleStyle">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">@dimen/lme_abc_ll_schedule_wrap</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="TextScheduleStyle">
        <item name="android:textColor">@color/tcAbcTvSchedule</item>
        <item name="android:textSize">@dimen/ts_abc_tv_schedule</item>
    </style>

    <style name="ViewDividerSLinkStyle">
        <item name="android:layout_marginBottom">@dimen/lmb_abc_v_link</item>
        <item name="android:layout_marginTop">@dimen/lmt_abc_v_link</item>
        <item name="android:background">@color/viewBlackColor</item>
    </style>
</resources>
