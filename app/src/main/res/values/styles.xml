<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LinearLayoutABC">
        <item name="android:layout_marginStart">36dp</item>
        <item name="android:layout_marginEnd">36dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="LinearLayoutHorizontal" parent="LinearLayoutABC">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LinearLayoutVertical" parent="LinearLayoutABC">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TextStyleWDP">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextStyleAll" parent="TextStyleWDP">
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textColorLink">#000</item>
        <item name="android:background">@null</item>
    </style>

    <style name="ViewStyleAll">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:background">#55000000</item>
    </style>

    <style name="TextStyleLink">
        <item name="android:gravity">center</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#000</item>
    </style>
</resources>
